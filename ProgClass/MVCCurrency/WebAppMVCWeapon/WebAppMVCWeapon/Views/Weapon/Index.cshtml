@model IEnumerable<WebAppMVCWeapon.Models.Weapon>

@{
    ViewData["Title"] = "Index";
}

<h1>Weapon Collection</h1>

<body style="background-color:slategrey;">

<p>
        <a asp-action="Create" style="color:#000aaa;" >Create New</a>
</p>
<table class="table">
    <thead>
        <tr>

            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WeaponTypeName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AmmoAmount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RoundsPerShot)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WeaponLevel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ID)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr style ="color:black">
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WeaponTypeName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AmmoAmount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RoundsPerShot)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WeaponLevel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ID)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new {  id=item.ID },  new {@style="color:#000aaa;"} ) |
                @Html.ActionLink("Details", "Details", new { id=item.ID },  new {@style="color:#000aaa;"}) |
               
                @* @Html.ActionLink("Delete", "Delete", new { id=item.ID }) *@
            </td>
            <td>
                    <button type="button">@Html.ActionLink("Shoot", "Shoot", new {id=item.ID}) </button> @*Button Attempt*@
            </td>
            <td>
                    <button type="button">@Html.ActionLink("Reload", "Reload", new {id=item.ID}) </button> @*Button Attempt*@
            </td>
        </tr>
}
    </tbody>
</table>

</body>

